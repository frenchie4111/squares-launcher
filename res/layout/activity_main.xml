<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/zero_margin"
    android:paddingLeft="@dimen/zero_margin"
    android:paddingRight="@dimen/zero_margin"
    android:paddingTop="@dimen/zero_margin"
    tools:context=".MainActivity"
    android:id="@+id/mainViewContainer" 
    >

    <RelativeLayout
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
    	android:paddingBottom="@dimen/zero_margin"
    	android:paddingLeft="@dimen/zero_margin"
    	android:paddingRight="@dimen/zero_margin"
    	android:paddingTop="@dimen/zero_margin"
    	android:id="@+id/mainViewRelativeContainer"
    	>
    
	    <HorizontalScrollView
	        android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:overScrollMode="never"
	        >
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:id="@+id/boxViewContainer"
	            android:orientation="vertical"
	            >
	            
	        </LinearLayout>
	        
	    </HorizontalScrollView>

    </RelativeLayout>
    
</LinearLayout>